---
interface Props {
  id?: string;
  title?: string;
  alternate?: boolean;
}

const { id, title, alternate = false } = Astro.props;
---

<section
  id={id}
  class:list={[
    'py-16 md:py-24',
    alternate ? 'bg-themed-secondary' : 'bg-themed',
  ]}
>
  <div class="section-container">
    {title && (
      <h2 class="font-heading text-3xl md:text-4xl font-semibold mb-8 text-center">
        <span class="relative inline-block">
          {title}
          <span class="absolute -bottom-2 left-1/2 -translate-x-1/2 w-16 h-0.5 bg-[var(--color-accent)]"></span>
        </span>
      </h2>
    )}
    <slot />
  </div>
</section>


