---
interface Props {
  transparent?: boolean;
}

const { transparent = false } = Astro.props;
---

<nav
  id="navbar"
  class:list={[
    'w-full fixed z-50 transition-all duration-300',
    transparent ? 'bg-transparent' : 'bg-[var(--color-nav-bg)] backdrop-blur-sm',
  ]}
>
  <div class="container mx-auto px-4 md:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a
        href="/"
        class="font-heading text-2xl font-semibold text-white hover:opacity-80 transition-opacity"
      >
        TC
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-1">
        <a href="/#history" class="nav-link">History</a>
        <a href="/#gallery" class="nav-link">Gallery</a>
        <a href="/#location" class="nav-link">Location</a>
        <a href="/#contact" class="nav-link">Contact</a>
        <a href="/tour" class="nav-link">Virtual Tour</a>
        <a href="/special" class="nav-link">Special Events</a>
        <a
          href="/donate"
          class="ml-2 px-4 py-2 rounded-md bg-forest dark:bg-gold text-white dark:text-rich-charcoal font-medium hover:bg-forest-light dark:hover:bg-gold-light transition-colors flex items-center gap-1.5"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
          </svg>
          Donate!
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <div class="md:hidden flex items-center">
        <button
          id="mobile-menu-button"
          type="button"
          class="p-2 rounded-md text-white hover:bg-white/10 transition-colors"
          aria-label="Open menu"
          aria-expanded="false"
        >
          <svg id="menu-open-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
          <svg id="menu-close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div
    id="mobile-menu"
    class="hidden md:hidden bg-[var(--color-nav-bg)] backdrop-blur-sm border-t border-white/10"
  >
    <div class="container mx-auto px-4 py-4 space-y-2">
      <a href="/#history" class="block nav-link py-3">History</a>
      <a href="/#gallery" class="block nav-link py-3">Gallery</a>
      <a href="/#location" class="block nav-link py-3">Location</a>
      <a href="/#contact" class="block nav-link py-3">Contact</a>
      <a href="/tour" class="block nav-link py-3">Virtual Tour</a>
      <a href="/special" class="block nav-link py-3">Special Events</a>
      <a
        href="/donate"
        class="block px-4 py-3 rounded-md bg-forest dark:bg-gold text-white dark:text-rich-charcoal font-medium text-center"
      >
        <svg class="w-4 h-4 inline mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
        </svg>
        Donate!
      </a>
    </div>
  </div>
</nav>

<script is:inline>
  // Mobile menu toggle
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const openIcon = document.getElementById('menu-open-icon');
  const closeIcon = document.getElementById('menu-close-icon');

  menuButton.addEventListener('click', () => {
    const isOpen = mobileMenu.classList.contains('hidden');
    mobileMenu.classList.toggle('hidden');
    openIcon.classList.toggle('hidden');
    closeIcon.classList.toggle('hidden');
    menuButton.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
  });

  // Close mobile menu when clicking a link
  mobileMenu.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu.classList.add('hidden');
      openIcon.classList.remove('hidden');
      closeIcon.classList.add('hidden');
      menuButton.setAttribute('aria-expanded', 'false');
    });
  });

  // Navbar scroll effect (for transparent navbar on hero)
  const navbar = document.getElementById('navbar');
  if (navbar.classList.contains('bg-transparent')) {
    window.addEventListener('scroll', () => {
      if (window.scrollY > 100) {
        navbar.classList.remove('bg-transparent');
        navbar.classList.add('bg-[var(--color-nav-bg)]', 'backdrop-blur-sm');
      } else {
        navbar.classList.add('bg-transparent');
        navbar.classList.remove('bg-[var(--color-nav-bg)]', 'backdrop-blur-sm');
      }
    });
  }
</script>
