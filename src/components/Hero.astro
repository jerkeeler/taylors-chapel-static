---
import { Image } from 'astro:assets';
import heroImage from '../assets/images/taylor1.jpg';
---

<section class="relative h-screen w-full flex flex-col justify-center items-center overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <Image
      src={heroImage}
      alt="Taylor's Chapel exterior"
      class="w-full h-full object-cover"
      widths={[640, 1024, 1536, 2048]}
      sizes="100vw"
      loading="eager"
      quality={85}
    />
    <!-- Gradient overlay for better text readability -->
    <div class="absolute inset-0 bg-gradient-to-b from-black/40 via-black/30 to-black/50"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 text-center px-4">
    <h1 class="font-heading text-5xl md:text-7xl lg:text-8xl text-white text-shadow-lg mb-4 tracking-wide">
      Taylor's Chapel
    </h1>
    <p class="font-heading text-2xl md:text-4xl text-white text-shadow italic">
      Baltimore's gem
    </p>
  </div>
</section>


