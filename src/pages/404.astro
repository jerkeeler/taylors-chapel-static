---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404: Not Found">
  <!-- Spacer for fixed navbar -->
  <div class="pt-20"></div>

  <section class="py-24 md:py-32">
    <div class="section-container text-center">
      <h1 class="font-heading text-8xl md:text-9xl font-bold text-[var(--color-accent)] mb-4">
        404
      </h1>
      <h2 class="font-heading text-3xl md:text-4xl font-semibold mb-6">
        Page Not Found
      </h2>
      <p class="text-xl text-themed-muted mb-8 max-w-md mx-auto">
        The page you're looking for seems to have wandered off into the cemetery...
      </p>
      <a
        href="/"
        class="btn-primary inline-flex items-center gap-2"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Return Home
      </a>
    </div>
  </section>
</Layout>


