---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Donate">
  <!-- Spacer for fixed navbar -->
  <div class="pt-20"></div>

  <section class="py-12 md:py-16">
    <div class="section-container">
      <h1 class="font-heading text-4xl md:text-5xl font-semibold mb-8 text-center">
        <span class="relative inline-block">
          Donations
          <span class="absolute -bottom-2 left-1/2 -translate-x-1/2 w-20 h-0.5 bg-[var(--color-accent)]"></span>
        </span>
      </h1>

      <div class="max-w-3xl mx-auto space-y-8">
        <!-- Introduction -->
        <div class="bg-themed-secondary rounded-lg p-8 shadow-lg">
          <p class="text-lg md:text-xl leading-relaxed mb-6">
            We appreciate donations! We are constantly working to maintain this aged
            building, its art and architecture, the church ground and the cemetery
            markers. We depend on our friends to help us with this effort.
          </p>

          <div class="border-l-4 border-[var(--color-accent)] pl-6 py-2">
            <p class="text-lg leading-relaxed">
              Please send your tax deductible donation via check made out to
              <strong>"Taylor's Chapel"</strong> to our treasurer:
            </p>
          </div>
        </div>

        <!-- Address Card -->
        <div class="bg-themed-secondary rounded-lg p-8 shadow-lg text-center">
          <p class="font-heading text-2xl mb-4">Dr. Calvin Keeler</p>
          <address class="text-lg not-italic text-themed-muted">
            8 Donna Dr.<br />
            Bear, DE 19701
          </address>
        </div>

        <!-- Tax Info -->
        <div class="bg-themed-secondary rounded-lg p-6 shadow-lg text-center">
          <p class="text-themed-muted">
            <span class="font-medium">Tax exempt number:</span>
            <span class="font-mono text-lg ml-2">82-2407488</span>
          </p>
        </div>

        <!-- Thank you note -->
        <div class="text-center pt-4">
          <p class="text-xl font-heading italic text-themed-muted">
            Thank you for helping preserve this piece of American history.
          </p>
        </div>
      </div>
    </div>
  </section>
</Layout>


